{
  "name": "oversight",
  "version": "1.0.0",
  "manifest_version": 2,
  "author": "Falcon Dai",
  "description": "It logs tab activities for time tracking.",
  "icons": {
    "128": "icon.png"
  },

  "background": {
    "scripts": ["dist/eventPage.js"],
    "persistent": true
  },

  "commands": {
    "view-collected-data": {
      "suggested_key": {
        "default": "Ctrl+B"
      },
      "description": "view your tracked browsing activities"
    }
  },

  "browser_action": {
    "default_icon": {
      "38": "icon38.png"
    },
    "default_title": "oversight"
  },

  "options_page": "options.html",

  "permissions": [
    "history",
    "tabs",
    "storage",
    "unlimitedStorage"
  ]
}
